# Required Configuration
SYNC_VAULT_ROOT=/path/to/your/vault
SYNC_JEKYLL_ROOT=/path/to/your/jekyll

# Optional Paths (with defaults shown)
SYNC_VAULT_ATOMICS=atomics
SYNC_JEKYLL_POSTS=_posts
SYNC_JEKYLL_ASSETS=assets/img/posts

# Optional Settings
SYNC_DEBUG=false
SYNC_BACKUP_COUNT=5
SYNC_AUTO_CLEANUP=true
SYNC_MAX_IMAGE_WIDTH=1200
SYNC_OPTIMIZE_IMAGES=true
SYNC_LOG_DIR=~/Library/Logs/obsidian-blog-sync

# Test Configuration (if needed)
TEST_VAULT_IMAGE=atomics/2024/12/03/example-image.png